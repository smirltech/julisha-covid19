<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/trow">

    <TextView
            android:id="@+id/tr_prov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:foreground="?attr/selectableItemBackground"
            android:text="Province"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:layout_weight="1" android:autoLink="web" android:cursorVisible="false" android:hint="voir ville"/>

    <TextView
        android:id="@+id/tr_inf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Infectés"
        android:textColor="#00e"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tr_dec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Décédés"
        android:textColor="#f00"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tr_guer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guéris"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="1"/>
</TableRow>