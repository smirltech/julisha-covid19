<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.views.CovidTestActivity"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:background="@color/colorPrimaryLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:text="Vous avez des doutes sur votre état de santé ?"/>


        <TextView
            android:id="@+id/titre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="20dp"
            android:textColor="@color/textcolor"
            android:text="Les ressources proposées sont adaptées aux personnes résidant en RDC. Elles sont mises à jour régulièrement selon les recommandations du ministère de la santé."
            android:layout_below="@id/titre"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titre2"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/questionnaire"
            android:contentDescription="Question" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/image"
            android:textColor="@color/textcolor"
            android:textSize="20dp"
            android:text="Vous avez une question sur le Coronavirus ?"/>
























    </RelativeLayout>
</ScrollView>