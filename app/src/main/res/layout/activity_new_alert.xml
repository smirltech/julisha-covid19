<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorPrimaryLight"
        android:gravity="center_horizontal">
    <LinearLayout
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_alert_white_24dp"
                android:layout_margin="10dp"/>
        <TextView
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:text="SIGNALER UN CAS"
                android:textStyle="bold"/>
        <TextView
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryLight"
                android:text="Si vous ou un de vos proche presente de symptomes"
                android:id="@+id/label_version"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="left|top"
            app:layout_anchor="@+id/nestedScrollView"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <EditText
                    android:id="@+id/signup_name"
                    style="@style/profileEditText"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Nom "
                    android:background="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:lines="1" android:singleLine="true" android:inputType="textPersonName"
                    android:layout_height="40dp"/>

            <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4b000000"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        style="@style/profileEditText"
                        android:drawableLeft="@drawable/ic_donut_small_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="Diagnostique :"/>
                <TextView
                        android:textAppearance="@style/TextAppearance.Design.Hint"
                        android:text="Cliquez pour choisir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_diagnostic"/>

                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        style="@style/Base.Widget.AppCompat.ButtonBar"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:scaleType="fitCenter"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/btn_diagnostic"
                        android:layout_height="32dp"/>
            </LinearLayout>


            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4b000000" android:visibility="visible"/>


            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        style="@style/profileEditText"
                        android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="Commune :"/>
                <TextView
                        android:textAppearance="@style/TextAppearance.Design.Hint"
                        android:text="Cliquez pour choisir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_commune"/>

                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        style="@style/Base.Widget.AppCompat.ButtonBar"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:scaleType="fitCenter"
                        android:tint="@color/colorPrimaryDark"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/btn_commune"
                        android:layout_height="32dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4b000000"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        style="@style/profileEditText"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:layout_height="wrap_content"
                        android:text="Localisation :"/>
                <TextView
                        android:textAppearance="@style/TextAppearance.Design.Hint"
                        android:text="Cliquez pour choisir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_loc"/>

                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        style="@style/Base.Widget.AppCompat.ButtonBar"
                        android:src="@drawable/ic_mode_edit_black_24dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="5dp"
                        android:tint="@color/colorPrimaryDark"
                        android:id="@+id/btn_lieu"
                        android:layout_height="32dp"/>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#4b000000"/>


            <EditText
                    android:id="@+id/signup_phone"
                    style="@style/profileEditText"
                    android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                    android:hint="Contact"
                    android:background="#FFFFFF"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:lines="1"
                    android:inputType="phone"
                    android:visibility="visible"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:text="SOUMETTRE"
            android:textSize="20sp"
            android:drawablePadding="-15sp"
            android:paddingRight="16dp"
            android:textColor="#FFFFFF"
            android:elevation="15dp"
            android:textAllCaps="true"
            android:layout_margin="20dp"
            android:background="@drawable/roundcorner_button"/>
</LinearLayout>