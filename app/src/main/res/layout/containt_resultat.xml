<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:layout_marginBottom="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"

        >




        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Diagnostique"
                android:id="@+id/titre"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="19sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imagealert"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/line1"
            android:visibility="gone"
            android:contentDescription="TODO" />
        <LinearLayout
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/imagealert"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="22dp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/messageap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/blue"
                android:textSize="19dp"
                android:visibility="gone">

            </TextView>


        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Appelez les urgences"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/message"
            android:layout_marginBottom="30dp"
            android:textStyle="bold"
            android:id="@+id/urgence_btn"
            android:onClick="urgence_btn"
            android:visibility="gone"
            android:background="@drawable/roundcorner_button"
            android:textColor="#ffffff" />




    </RelativeLayout>


</ScrollView>