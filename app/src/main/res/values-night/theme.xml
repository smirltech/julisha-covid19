<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dayNight</item>
        <item name="colorPrimaryDark">@color/dayNight</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/dayNight</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="profileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:padding">10dp</item>
    </style>



    <style name="ThemeMove" parent="AppTheme">
        <item name="colorPrimary">@color/dayNight</item>
        <item name="colorPrimaryDark">@color/dayNight</item>
        <item name="colorAccent">@color/dayNight</item>

        <item name="colorSecondary">@color/move</item>

        <item name="colorSecondaryVariant">@color/dayNight</item>
        <item name="colorOnSecondary">@color/white</item>


    </style>
    <style name="ThemeLime" parent="AppTheme">
        <item name="colorPrimary">@color/dayNight</item>
        <item name="colorPrimaryDark">@color/dayNight</item>
        <item name="colorAccent">@color/dayNight</item>

        <item name="colorSecondaryVariant">@color/dayNight</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <!-- No Action Bar -->
    <style name="ThemeMoveNoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/dayNight</item>
        <item name="colorPrimaryDark">@color/dayNight</item>
        <item name="colorAccent">@color/dayNight</item>
        <item name="colorSecondary">@color/dayNight</item>

        <item name="colorSecondaryVariant">@color/dayNight</item>
        <item name="colorOnSecondary">@color/white</item>



    </style>

    <style name="ThemeLimeNoActionBar" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/dayNight</item>
        <item name="colorPrimaryDark">@color/dayNight</item>
        <item name="colorAccent">@color/dayNight</item>


        <item name="colorSecondaryVariant">@color/dayNight</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

</resources>
